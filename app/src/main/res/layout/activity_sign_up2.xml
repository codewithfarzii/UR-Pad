<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".signUp2">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/logoImage"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/note_scan"
        android:transitionName="logo_image" />

    <TextView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:fontFamily="@font/aladin"
        android:text="UR Pad"
        android:gravity="center"
        android:textColor="#EA9617"
        android:textSize="40sp"
        android:transitionName="logo_name" />
    <TextView
        android:id="@+id/slogan1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:fontFamily="@font/caesar_dressing"
        android:paddingTop="5dp"
        android:text="WHERE YOU SAVE NOTES"
        android:textAlignment="center"
        android:textColor="#5569D6"
        android:textSize="26sp"
        android:transitionName="logo_slogan" />
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose Gender"
                android:textColor="@color/black"
                android:fontFamily="@font/antic"
                android:textSize="25sp"
                android:paddingLeft="5dp"/>

            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo"
                    android:textSize="20sp"
                    android:text="Male" />

                <RadioButton
                    android:id="@+id/female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/baloo"
                    android:textSize="20sp"
                    android:text="Female" />

                <RadioButton
                    android:id="@+id/other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/baloo"
                    android:textSize="20sp"
                    android:text="Other" />
            </RadioGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select your Age"
                android:textColor="@color/black"
                android:fontFamily="@font/antic"
                android:textSize="25sp"
                android:paddingLeft="5dp"
               />

            <DatePicker
                android:id="@+id/age_picker"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:datePickerMode="spinner"
                android:calendarViewShown="false"
                android:spinnersShown="true"
                />

            <Button
                android:id="@+id/reg_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/custom_button"
                android:textStyle="bold"
                android:text="Next"
                android:textColor="#fff"
                android:textSize="30sp"
                android:transitionName="go_tran" />

            <Button
                android:id="@+id/loginbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Already have an account? Login! "
                android:background="#00000000"
                android:elevation="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/antic"
                android:textColor="@color/black"
                android:textSize="26sp"
                android:transitionName="signbtn_tran" />
        </LinearLayout>


</ScrollView>
</LinearLayout>